{% block title %}Inscription{% endblock %}
{% block titre %}Inscription{% endblock %}

{% block body %}

<div class="container">
{{ form_start(form) }}

{{ form_row(form.username, {'attr': {'placeholder': 'Votre nom'}, 'label': 'Nom\'utilisateur'} ) }}

{{ form_row(form.password, {'attr': {'placeholder': 'Votre mot de passe'}, 'label': 'Mot de passe'} ) }}

