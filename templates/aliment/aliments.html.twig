{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}

   {% block titre %}Liste des aliments
   {% if isCalorie %} 
   par Calorie
   {% elseif isGlucide%}
   par Glucide
   {% endif %}
   {% endblock %}

{% block body %}
<a class="btn btn-primary ml-3 mb-2" href="{{ path('alimentCalorie', {'calorie':20})}}">Aliment par calorie</a>
<a class="btn btn-success mb-2" href="{{ path('alimentGlucide', {'glucide':5})}}">Aliment par glucide</a>
<div class="row container d-flex justify-content-around m-auto">
{% for aliment in aliments %}

   <div class="card col-3" style="width: 18rem;">
      <img src="{{ asset('/image/aliments/' ~ aliment.image) }}" style="max-height:150px;" class="mt-2 card-img-top" alt="{{ aliment.nom }}">
      <div class="card-body">
         <h4 class="card-title row-cols-2 text-center">{{ aliment.nom }}</h4>
         <hr>
         <ul>
            <li>Prix: {{ aliment.prix }}</li>
            <li>Proteine: {{ aliment.proteine }}</li>
            <li>Glucide: {{ aliment.glucide }}</li>
            <li>Lipide: {{ aliment.lipide }}</li>
            <li>Type: {{ aliment.type.libelle }}</li>
         </ul>
         <a href="{{ path('aliment', {'name': aliment.nom }) }}" class="w-100 btn btn-primary">{{ aliment.nom   }}</a>
      </div>
   </div>

{% endfor %}
</div>
{% endblock %}
